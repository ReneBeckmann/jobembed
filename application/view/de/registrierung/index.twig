{% extends layout %}
{% block title %}Registrierung{% endblock %}

{% block styles %}
    <link rel="stylesheet" href="css/jquery.steps.css">    
    <style>
        .wizard>.steps {
            position: relative;
            display: none;
            width: 100%;
        }

        .wizard>.actions{
            display:none;
        }

        .wizard>.content {
            background: #fff;
        }

        .btn-prev, .btn-next {
            color: rgb(125, 125, 125);
            background-color: #fdc661;
            border-color: #fdc661;
        }



        #verificationAlert{
            display: none;
            padding: 5px 10px;
            border:1px solid red;
            border-radius: 5px;;
        }

		.cascading-right {
			margin-right: -50px;
		}
	
		@media (max-width: 991.98px) {
			.cascading-right {
			margin-right: 0;
			}
		}
    </style>
{% endblock %}
