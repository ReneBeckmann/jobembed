{% block scripts %}
    <script src="js/jquery.steps.js"></script>
    <script src="js/iframeResizer.contentWindow.min.js"></script>

    <script>

        $(document).ready(function () {
            $('#passwordVerify').on('keyup', function(e){
                
                let password            = $('#password').val()
                let passwordVerify      = $('#passwordVerify').val()
                let verificationAlert   = $('#verificationAlert');

                if( password != passwordVerify){
                    verificationAlert.fadeIn(500);
                }else{
                    verificationAlert.fadeOut(500);
                }
            })

            /*INITI STEPWIZARD*/
            let stepsWizard = $("#registerForm")

            stepsWizard.steps({
                headerTag: "h3",
                bodyTag: "section",
                transitionEffect: "fade",
                autoFocus: true
            });

            /*CUSTOM BUTTONS FOR STEPWIZARD*/
            $('.btn-prev').on('click', function (event) {
                event.preventDefault();
                stepsWizard.steps('previous')
            })

            $('.btn-next').on('click', function (event) {
                event.preventDefault();
                stepsWizard.steps('next')
            })
        });

    </script>
