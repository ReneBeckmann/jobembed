{% block styles %}
    <style>
        :root {
            --bgColor: {{ bgColor }};
            --primaryColor: {{ primaryColor }};
            --secondaryColor: {{ secondaryColor }};
            --fontColor: {{ fontColor }};
            --linkColor: {{ linkColor }};
        }
        
        a {
            -webkit-transition: .3s all ease;
            -o-transition: .3s all ease;
            transition: .3s all ease; 
        }
        
        #vorschau a, a:hover 
        {
            text-decoration: none !important; 
        }
          
        #vorschau .content {
            padding: 7rem 0; 
        }
          
        h2 {
            font-size: 20px; 
        }
          

        #vorschau .btn-primary {
            color: var(--fontColor);
            background-color: var(--primaryColor);
            border-color: var(--primaryColor);
        }

        #vorschau .btn-primary:hover {
            color: var(--fontColor);
            background-color: var(--primaryColor);
            border-color: var(--primaryColor);
        }


        /*Accordion style*/
        #vorschau .accordion .accordion-item {
            
            margin-bottom: 10px;
            position: relative;
            border-radius: 40px;
            overflow: hidden; 
            background:var(--bgColor);
        }

        #vorschau .accordion-button:not(.collapsed) {
            color: var(--fontColor);
            background-color: #fff;
            box-shadow: inset 0 -1px 0 rgb(0 0 0 / 13%);
        }

        #vorschau .accordion .accordion-item .accordion-button {
            color: var(--fontColor);
            background-color: var(--primaryColor);
            padding-left:40px;
        }

    
        #vorschau .accordion .accordion-item .accordion-button:before {
            font: var(--fa-font-solid);
            content: "\f067";
            position: absolute;
            top: 50%;
            -webkit-transform: translateY(-50%);
            -ms-transform: translateY(-50%);
            transform: translateY(-50%);
            left: 15px;
            color: var(--fontColor);
        }


        #vorschau .accordion .accordion-item .accordion-button[aria-expanded="true"]:before {
            font: var(--fa-font-solid);
            content: "\f068";
            position: absolute;
            color: var(--fontColor);
            top: 50%;
            -webkit-transform: translateY(-50%);
            -ms-transform: translateY(-50%);
            transform: translateY(-50%);
            left: 15px;
        }

        #vorschau .accordion-button:not(.collapsed)::after {
            background-image:unset; 
        }

        #vorschau .accordion-button::after {
            background-image:unset;
        }

        #vorschau .accordion-body p{
            color:var(--fontColor);
        }

    </style>
{% endblock %}

<div class="accordion accordion-flush" id="acc">
    {% for row in stellen %}
        <div class="accordion-item">
            <h2 class="accordion-header" id="flush-heading_{{ row.id }}">
                <button 
                    class="accordion-button collapsed" 
                    type="button" 
                    data-bs-toggle="collapse"
                    data-bs-target="#flush-collapse_{{ row.id }}" 
                    aria-expanded="false"
                    aria-controls="flush-collapse_{{ row.id }}">
                    {{ row.name }}
                </button>
            </h2>
            <div id="flush-collapse_{{ row.id }}" class="accordion-collapse collapse"
                aria-labelledby="flush-heading_{{ row.id }}" data-bs-parent="#acc">
                <div class="accordion-body">

                    {{ row.beschreibung|raw }}
                    <a class="btn btn-primary btn-vorschau">Zur Bewerbung</a>
                </div>
            </div>
        </div>
    {% endfor %}
</div>

{% block script %}
    <script>
        $('.btn-vorschau').on('click', function(e){
            e.preventDefault()
        })
    </script>
{% endblock %}