{% extends layout %}
{% block title %}Meine Stellenanzeigen{% endblock %}

{% block styles %}
    <style>
        .fa-backward{
            font-size:2em;
        }
    </style>
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row mb-2">
            <div class="col-md-10">
                <h4>Stellenangebot hinzuf√ºgen</h4>
            </div>
            <div class="col-md-2 pb-2">
                <a href="intern/meineStellen" class="float-end"><i class="fa-solid fa-backward"></i></a>
            </div>
            <hr>
        </div>

        <div class="row mt-2">
            <div class="col-md-12">
                <form action="intern/meineStellen" method="post">
                    <div class="mt-3">
                        <input type="text" name="stellenTitle" class="form-control" placeholder="Stellenbezeichnung">
                    </div>

                    <div class="mt-3">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="stellenart" id="vollzeit" value="1" checked>
                                    <label class="form-check-label" for="vollzeit">Vollzeit</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="stellenart" id="halbtags" value="2">
                                    <label class="form-check-label" for="halbtags">Halbtags</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="stellenart" id="ausbildung" value="3">
                                    <label class="form-check-label" for="ausbildung">Ausbildung</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="stellenart" id="dualesStudium" value="4">
                                    <label class="form-check-label" for="dualesStudium">Duales Studium</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="stellenart" id="praktikum" value="5">
                                    <label class="form-check-label" for="praktikum">Praktikum</label>
                                </div>
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-md-4">
                                <label for="start">Start:</label>
                                <input type="date" class="form-control" name="start" id="start" value="{{ date }}" />
                            </div>  

                            <div class="col-md-4">
                                <label for="ansprechpartner">Ansprechpartner:</label>
                                <select class="form-select" name="ansprechpartner" id="ansprechpartner">
                                   {% for row in ansprechpartner %} 
                                        <option value="{{ row.id }}">{{ row.nachname }}, {{ row.vorname }}</option>
                                   {% endfor %}
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label for="standort">Standort:</label>
                                <select class="form-select" name="standort" id="standort">
                                   {% for row in standorte %} 
                                        <option value="{{ row.id }}">{{ row.ort }}, {{ row.strasse }}</option>
                                   {% endfor %}
                                </select>
                            </div>
                        </div>
                    </div>


                    <div class="mt-3">
                        <textarea  class="form-control" name="stellenBeschreibung"  cols="30" rows="10" placeholder="Beschreibungstext"></textarea>
                    </div>
                    <div class="mt-3">
                        <input class="btn btn-primary form-control" type="submit" name="subAddStelle" value="Speichern">
                    </div>
                </form>
            </div>
        </div>

        
    </div>

{% endblock %}


{% block scripts %}
    <!-- CKEDITOR JS -->
	<script src="js/ckeditor/ckeditor.js"></script>
	<script>
		// Replace the <textarea id="editor1"> with a CKEditor 4
		// instance, using default configuration.
		CKEDITOR.replace("stellenBeschreibung");
	</script>
{% endblock %}